<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/Dot_img2"
        android:layout_width="195dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:background="#FCDBFD"
        android:gravity="start"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/Dot_txt2"
        app:layout_constraintStart_toStartOf="@+id/Dot_txt2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Dot_img3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:background="#FCDBFD"
        android:gravity="end"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/Dot_txt2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Dot_img2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Dot_txt2"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_below="@id/Dot_img2"
        android:layout_marginBottom="308dp"
        android:background="#FCDBFD"
        android:ellipsize="middle"
        android:gravity="center"
        android:padding="2dp"
        android:singleLine="true"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>